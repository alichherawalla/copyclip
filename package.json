{
  "name": "copyclip",
  "version": "1.0.0",
  "description": "A privacy-focused clipboard manager for macOS. 100% offline, no tracking, no cloud.",
  "author": "CopyClip",
  "license": "MIT",
  "main": "dist/main/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/copyclip"
  },
  "keywords": [
    "clipboard",
    "clipboard-manager",
    "macos",
    "electron",
    "privacy",
    "offline"
  ],
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "npm run build:main && npm run build:preload && concurrently \"npm run watch:main\" \"npm run dev:renderer\" \"npm run start:electron\"",
    "dev:renderer": "vite",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "start:electron": "sleep 2 && VITE_DEV_SERVER=true electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "package": "npm run build && electron-builder",
    "start": "npm run build && npx electron ."
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.30",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.copyclip.app",
    "productName": "CopyClip",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
